<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#027293"
    android:clickable="true"
    android:focusable="auto"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/logoshirt" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_logo"
        android:layout_marginStart="117dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/safetrial512" />

    <EditText
        android:id="@+id/et_userName"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_below="@id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:alpha="0.4"
        android:background="#ffffff"
        android:drawableStart="@drawable/ic_username"
        android:drawableLeft="@drawable/ic_username"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_below="@+id/et_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:alpha="0.4"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/tick"
        android:layout_width="10dp"
        android:layout_height="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="182dp"
        app:srcCompat="@drawable/tick" />

    <EditText
        android:id="@+id/et_cnf_password"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:alpha="0.4"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_cnf_password"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_below="@+id/et_cnf_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:alpha="0.4"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:text="Register"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:alpha="0.8"
        android:clickable="true"
        android:text="Login"
        android:textColor="#ffffff" />

</RelativeLayout>