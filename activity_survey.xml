<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyActivity">

    <TextView
        android:id="@+id/tv_headerBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:background="#027293"
        android:text="" />


    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="35dp"
        app:srcCompat="@drawable/ic_cart" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/logo1" />


    <TextView
        android:id="@+id/tv_logodesign"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/logo_design"
        android:text="" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/tv_statusBox"
        android:layout_width="371dp"
        android:layout_height="122dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="97dp"
        android:elevation="10dp"
        android:background="#50493F"
        android:text="" />

    <ImageView
        android:id="@+id/iv_statusImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:elevation="10dp"
        android:layout_marginTop="112dp"
        app:srcCompat="@drawable/cough" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="81dp"
        android:elevation="10dp"
        android:fontFamily="@font/bradhitc"
        android:text="Processing"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textScaleX="1.4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_updates"
        android:layout_width="334dp"
        android:layout_height="70dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="201dp"
        android:background="@drawable/box_shadow"
        android:elevation="12dp"
        android:padding="27dp"
        android:textColor="#027293"
        android:text="You are in 1Km radius of a Corona Patient" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="201dp"
        android:elevation="12dp"
        android:fontFamily="@font/verdana_bold"
        android:paddingTop="7dp"
        android:text="Hello Adam"
        android:textColor="#027293" />


   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/iv_survey_back"
               android:layout_width="391dp"
               android:layout_height="500dp"
               android:layout_centerHorizontal="true"
               android:layout_marginStart="20dp"
               android:layout_marginTop="300dp"
               android:background="@drawable/box_shadow"
               android:elevation="5dp"
               android:padding="20dp" />

           <TextView
               android:id="@+id/tv_hd"
               android:layout_width="190sp"
               android:layout_height="24sp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="37dp"
               android:layout_marginTop="321dp"
               android:fontFamily="@font/leelawdb"
               android:textSize="18sp"
               android:elevation="7dp"
               android:text="My Health Declaration" />

           <TextView
               android:id="@+id/tv_q1"
               android:layout_width="333dp"
               android:layout_height="64dp"
               android:layout_below="@+id/tv_hd"
               android:layout_alignParentStart="true"
               android:layout_marginTop="13dp"
               android:layout_marginStart="31dp"
               android:elevation="7dp"
               android:text="Have you been to any area or countries of COVID-19 as indicated by WHO over the past 14 days?" />

           <CheckBox
               android:id="@+id/cb_q1_y"
               android:layout_width="59dp"
               android:layout_height="18dp"
               android:layout_below="@+id/tv_hd"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="Yes"
               android:textColor="#625F5F" />

           <CheckBox
               android:id="@+id/cb_q1_n"
               android:layout_width="59dp"
               android:layout_height="18dp"
               android:layout_below="@+id/tv_hd"
               android:layout_alignParentStart="true"
               android:layout_marginStart="200dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:text="No"
               android:textColor="#625F5F"
               android:textColorLink="#625F5F" />

           <TextView
               android:id="@+id/tv_q2"
               android:layout_width="333dp"
               android:layout_height="64dp"
               android:layout_below="@+id/tv_q1"
               android:layout_alignParentStart="true"
               android:layout_marginTop="13dp"
               android:layout_marginStart="31dp"
               android:elevation="7dp"
               android:text="Have you had any of the following symptoms over the past 14 days? Please tick if yes" />

           <CheckBox
               android:id="@+id/cb_q2_op1"
               android:layout_width="80dp"
               android:layout_height="18dp"
               android:layout_below="@+id/tv_q1"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="Fever"
               android:textColor="#625F5F" />

           <CheckBox
               android:id="@+id/cb_q2_op2"
               android:layout_width="200dp"
               android:layout_height="18dp"
               android:layout_below="@+id/tv_q1"
               android:layout_alignParentStart="true"
               android:layout_marginStart="200dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:text="Difficulty In Breathing"
               android:textColor="#625F5F"
               android:textColorLink="#625F5F" />
           <CheckBox
               android:id="@+id/cb_q2_op3"
               android:layout_width="80dp"
               android:layout_height="18dp"
               android:layout_below="@+id/cb_q2_op1"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="5dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="Cough"
               android:textColor="#625F5F" />

           <CheckBox
               android:id="@+id/cb_q2_op4"
               android:layout_width="130dp"
               android:layout_height="18dp"
               android:layout_below="@+id/cb_q2_op2"
               android:layout_alignParentStart="true"
               android:layout_marginStart="200dp"
               android:layout_marginTop="5dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:text="Sore Throat"
               android:textColor="#625F5F"
               android:textColorLink="#625F5F" />

           <EditText
               android:id="@+id/et_other"
               android:layout_width="304dp"
               android:layout_height="40dp"
               android:layout_below="@+id/cb_q2_op4"
               android:layout_centerHorizontal="true"
               android:ems="10"
               android:elevation="7dp"
               android:hint="Other Symptoms"
               android:inputType="textMultiLine" />

           <TextView
               android:id="@+id/tv_q3"
               android:layout_width="333dp"
               android:layout_height="64dp"
               android:layout_below="@+id/et_other"
               android:layout_marginTop="13dp"
               android:layout_marginStart="31dp"
               android:elevation="7dp"
               android:text="Have you been in close contact with person suspected to have COVID-19?" />
           <CheckBox
               android:id="@+id/cb_q3_op1"
               android:layout_width="80dp"
               android:layout_height="18dp"
               android:layout_below="@+id/et_other"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="Yes"
               android:textColor="#625F5F" />

           <CheckBox
               android:id="@+id/cb_q3_op2"
               android:layout_width="200dp"
               android:layout_height="18dp"
               android:layout_below="@+id/et_other"
               android:layout_alignParentStart="true"
               android:layout_marginStart="200dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:text="No"
               android:textColor="#625F5F"
               android:textColorLink="#625F5F" />
           <TextView
               android:id="@+id/tv_q4"
               android:layout_width="333dp"
               android:layout_height="64dp"
               android:layout_below="@+id/cb_q3_op1"
               android:layout_marginTop="13dp"
               android:layout_marginStart="31dp"
               android:elevation="7dp"
               android:text="Are you travelling from Red / Amber Zone" />

           <CheckBox
               android:id="@+id/cb_q4_op1"
               android:layout_width="80dp"
               android:layout_height="18dp"
               android:layout_below="@+id/cb_q3_op1"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="Yes"
               android:textColor="#625F5F" />

           <CheckBox
               android:id="@+id/cb_q4_op2"
               android:layout_width="200dp"
               android:layout_height="18dp"
               android:layout_below="@+id/cb_q3_op1"
               android:layout_alignParentStart="true"
               android:layout_marginStart="200dp"
               android:layout_marginTop="58dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:text="No"
               android:textColor="#625F5F"
               android:textColorLink="#625F5F" />

           <CheckBox
               android:id="@+id/cb_tnc"
               android:layout_width="300dp"
               android:layout_height="18dp"
               android:layout_below="@+id/cb_q4_op2"
               android:layout_alignParentStart="true"
               android:layout_marginStart="43dp"
               android:layout_marginTop="13dp"
               android:buttonTint="#625F5F"
               android:elevation="7dp"
               android:theme="@style/y_checkbox"
               android:text="I Accept terms and conditions click here"
               android:textColor="#625F5F" />

           <Button
               android:id="@+id/btn_submitSurvey"
               android:layout_width="134dp"
               android:layout_height="29dp"
               android:layout_below="@+id/cb_tnc"
               android:layout_marginTop="20dp"
               android:layout_centerHorizontal="true"
               android:background="#027293"
               android:elevation="10dp"
               android:stateListAnimator="@null"
               android:textColor="#ffffff"
               android:fontFamily="@font/leelawdb"
               android:textSize="11sp"
               android:text="Confirm" />


       </RelativeLayout>
   </ScrollView>


</RelativeLayout>