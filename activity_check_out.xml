<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity">

    <TextView
        android:id="@+id/tv_headerBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:background="#027293"
        android:text="" />


    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="35dp"
        app:srcCompat="@drawable/ic_cart" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/logo1" />


    <TextView
        android:id="@+id/tv_logodesign"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/logo_design"
        android:text="" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:layout_below="@+id/tv_headerBox"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ff33fdfe269f4e19e5afd4a8a6608205" />

    <TextView
        android:id="@+id/tv_prodName"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawdb"
        android:layout_marginTop="15dp"
        android:textColor="#625F5F"
        android:textSize="18sp"
        android:text="Immersive Soul" />

    <TextView
        android:id="@+id/tv_prodDetails"
        android:layout_width="268dp"
        android:layout_height="18dp"
        android:layout_below="@id/tv_prodName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawad"
        android:textColor="#625F5F"
        android:textSize="15sp"
        android:text="Printed round neck T-Shirt, short sleeves" />

    <TextView
        android:id="@+id/tv_prodSize"
        android:layout_width="46dp"
        android:layout_height="18dp"
        android:layout_below="@id/tv_prodDetails"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawad"
        android:textColor="#625F5F"
        android:textSize="15sp"
        android:text="Size: M" />

    <TextView
        android:id="@+id/tv_prodPrice"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:layout_below="@+id/tv_prodDetails"
        android:layout_marginStart="310dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/leelawdb"
        android:textColor="#625F5F"
        android:textSize="15sp"
        android:text="RS. 599" />

    <TextView
        android:id="@+id/tv_paymentOption"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_below="@+id/tv_prodSize"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/leelawdb"
        android:textColor="#625F5F"
        android:textSize="15sp"
        android:text="Payment Option" />

    <CheckBox
        android:id="@+id/cb_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_paymentOption"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawad"
        android:textSize="15sp"
        android:textColor="#625F5F"
        android:text="Cash" />

    <CheckBox
        android:id="@+id/cb_creditDebitCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_cash"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawad"
        android:textSize="15sp"
        android:textColor="#625F5F"
        android:text="Credit/Debit Card" />

    <CheckBox
        android:id="@+id/cb_netBanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_creditDebitCard"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/leelawad"
        android:textSize="15sp"
        android:textColor="#625F5F"
        android:text="NetBanking" />


    <Button
        android:id="@+id/btn_buy"
        android:layout_width="134dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cb_netBanking"
        android:layout_marginTop="25dp"
        android:background="#027293"
        android:fontFamily="@font/leelawdb"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="Confirm" />


</RelativeLayout>